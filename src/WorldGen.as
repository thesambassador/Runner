		private var levelWidth : Number = 100;  //level width in tiles
		private var levelHeight : Number = 100; //level height in tiles
		private var levelGridWidth: Number = 5; //number of grid squares in width
		private var levelGridHeight: Number = 4; //number of grid squares in height
		
		private var roomWidth: Number = levelWidth / levelGridWidth; //room width in tiles
		private var roomHeight: Number = levelHeight / levelGridHeight; //room height in tiles
		
		private var levelGrid : Grid;
		public var level:FlxTilemap;
		
		public function generateWorld() : FlxTilemap {
			
			levelGrid = new Grid(levelGridWidth, levelGridHeight);

			createLayout();
			
			level = new FlxTilemap();
			level.loadMap(FlxTilemap.arrayToCSV(levelGrid.convertToOneDimension(), levelGridWidth), levelNums, 16, 16);
			
			return level;
		}
		
		private function createLayout() : void {
			//start in the lower left
			var y:Number = levelGridHeight - 1;
			var x:Number = 0;
			var roomNumber = 1;
			
			var done : Boolean = false;
			
			while (!done){
				// 1x1 = 0
				// 1x2 = 1
				// 2x1 = 2
				// 2x2 = 3
				
				//determine which room sizes are valid at this spot
				var roomSizes : Array;
				if (y == 0 && x == levelGridWidth-1) //if we're already at the top-right of the level
					roomSizes = [0];
				else if (y == 0) { //if we're at the top of the level
					roomSizes = [0, 2];
				}
				else if (x == levelGridWidth - 1) { //if we're already at the far-right of the level
					roomSizes = [0, 1];
				}
				else {
					roomSizes = [0, 1, 2, 3];
				}
				
				//choose a random room type
				var roomSize : Number = FlxG.getRandom(roomSizes) as Number;
			
				
				//generate a 1x1 room
				if (roomSize == 0) {
					levelGrid.setCellAt(x,y,roomNumber);

				}
				
				//generate a 1x2 room
				else if (roomSize == 1) {
					levelGrid.setCellAt(x,y,roomNumber)
					levelGrid.setCellAt(x,y-1,roomNumber)
					
					y -= 1;
				}
				//generate a 2x1 room
				else if (roomSize == 2) {
					levelGrid.setCellAt(x,y,roomNumber)
					levelGrid.setCellAt(x+1,y,roomNumber)
					
					x += 1;
				}
				//generate a 2x2 room
				else if (roomSize == 3) {
					levelGrid.setCellAt(x,y,roomNumber); 
					levelGrid.setCellAt(x,y-1,roomNumber); 
					levelGrid.setCellAt(x+1,y-1,roomNumber); 
					levelGrid.setCellAt(x+1,y,roomNumber); 

					x += 1;
					y -= 1;
				}
				
				//if we're all the way at the top-right corner, we're done
				if (y == 0 && x == levelGridWidth-1) {
					done = true;
				}
				//if we're all the way at the top of the screen, we can only move right
				else if (y == 0) {
					x += 1;
				}
				//if we're all the way at the right of the screen, we can only move up
				else if (x == levelGridWidth - 1) {
					y -= 1;
				}
				else {
					var move:String = FlxG.getRandom(["up", "right"]) as String;
					if (move == 'up') 
						y -= 1;
					else 
						x += 1;
					
				}
				
				
				roomNumber += 1;
				
			}
			
		}
		
